{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext","DOM"],
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "types": ["vite/client","node"],
    "noEmit": true        // <<<<< prevent TS from emitting .js files
  },
  "include": ["src/**/*.ts","src/**/*.d.ts","src/**/*.vue"],
  "exclude": ["node_modules","dist"]
}
